<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.colgorithmic.isqtbquestionbank.AppAudience"
    tools:showIn="@layout/activity_app_audience">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="This app is for aspiring software tester who wants to be ISQTP certified. This app helps enthusiastic software testers towards achieving their goals for foundation level certificate exams of ISQTP"
                android:layout_marginTop="150dp"
                android:padding="20dp"
                android:textColor="#7f7f7f"
                android:textSize="20dp"
                android:id="@+id/appDetail"
                android:gravity="center"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
