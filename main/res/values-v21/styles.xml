<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SelectCategory">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="InstructionCategory">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorInstruction</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">300dip</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <!--<item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">0dp</item>
        <!--<item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="gridStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorInstruction</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginRight">30dp</item>

    </style>

</resources>
